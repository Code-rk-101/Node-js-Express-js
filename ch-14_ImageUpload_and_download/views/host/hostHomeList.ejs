<%- include('../partials/head') %>
<style>
    .page-title {
        text-align: center;
        font-size: 1.8rem;
        color: #333;
        margin: 30px 0 10px;
    }
    .cards-grid {
        display: flex;
        align-items: stretch;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        padding: 20px 40px;
    }
    .home-card {
        width: 340px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .home-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 28px rgba(0,0,0,0.15);
    }
    .home-card img {
        width: 100%;
        height: 220px;
        object-fit: cover;
    }
    .card-body {
        padding: 18px 20px 22px;
    }
    .card-body h2 {
        font-size: 1.25rem;
        color: #222;
        margin: 0 0 10px;
    }
    .card-info {
        display: flex;
        flex-direction: column;
        gap: 6px;
        margin-bottom: 14px;
    }
    .card-info p {
        margin: 0;
        font-size: 0.92rem;
        color: #555;
    }
    .card-info .price {
        font-size: 1.1rem;
        font-weight: 700;
        color: rgb(30, 115, 134);
    }
    .card-info .location::before { content: "üìç "; }
    .card-rating {
        display: flex;
        align-items: center;
        gap: 4px;
    }
    .card-rating .star { color: #ff9800; font-size: 1rem; }
    .card-rating .star.empty { color: #ccc; }
    .card-rating .rating-text { font-size: 0.85rem; color: #777; margin-left: 4px; }
    .card-actions {
        display: flex;
        gap: 10px;
        margin-top: 6px;
    }
    .card-actions .btn-edit {
        background-color: rgb(66, 158, 69);
        color: white;
        padding: 9px 20px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .card-actions .btn-edit:hover {
        background-color: rgb(50, 130, 53);
        transform: translateY(-1px);
    }
    .card-actions .btn-delete {
        background-color: rgb(194, 25, 25);
        color: white;
        padding: 9px 20px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .card-actions .btn-delete:hover {
        background-color: rgb(160, 18, 18);
        transform: translateY(-1px);
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }
    .empty-state h2 { color: #555; margin-bottom: 8px; }
    @media (max-width: 600px) {
        .cards-grid { padding: 15px; gap: 20px; }
        .home-card { width: 100%; }
    }
</style>
</head>
<body>
    <%- include('../partials/nav') %>

    <h1 class="page-title">Your Host Home List</h1>

    <main>
        <% if (registeredHome.length > 0) { %>
        <div class="cards-grid">
            <% registeredHome.forEach((home)=> { %>
                <div class="home-card">
                    <img src="<%= home.image %>" alt="<%= home.HouseName %>" />
                    <div class="card-body">
                        <h2><%= home.HouseName %></h2>
                        <div class="card-info">
                            <p class="price">‚Çπ <%= Number(home.price).toLocaleString('en-IN') %> / mo</p>
                            <p class="location"><%= home.location %></p>
                            <div class="card-rating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <span class="star <%= i <= Number(home.rating) ? '' : 'empty' %>">‚òÖ</span>
                                <% } %>
                                <span class="rating-text"><%= home.rating %>/5</span>
                            </div>
                        </div>
                        <div class="card-actions">
                            <a href="/host/edit_home/<%= home._id %>?editing=true" class="btn-edit">Edit</a>
                            <form action="/host/delete_home" method="POST">
                                <input type="hidden" name="id" value="<%= home._id%>">
                                <button class="btn-delete">Delete</button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <% } else { %>
        <div class="empty-state">
            <h2>No homes listed yet</h2>
            <p>Start by adding a home from the <a href="/host/add-home">Add Home</a> page.</p>
        </div>
        <% } %>
    </main>
</body>
</html>