<%- include('../partials/head') %>
<style>
    .role-selector {
        display: flex;
        gap: 10px;
    }
    .role-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 10px 8px;
        border: 1.5px solid #ddd;
        border-radius: 8px;
        background: #fafafa;
        color: #555;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .role-btn:hover {
        border-color: #ff9800;
        color: #ff9800;
    }
    input[type="radio"]:checked + .role-btn {
        border-color: #ff9800;
        background: #fff8ee;
        color: #ff9800;
        box-shadow: 0 0 0 3px rgba(255,152,0,0.12);
    }
    .login-form {
        width: 500px;
        margin: 40px auto;
    }
    .name-row {
        display: flex;
        gap: 12px;
    }
    .name-row .input-group {
        flex: 1;
    }
</style>
</head>
<body>
    <%- include('../partials/nav') %>

    <main class="login-page">
        <form action="/signup" method="POST" class="login-form">
            <div class="login-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#ff9800" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="8.5" cy="7" r="4"></circle>
                    <line x1="20" y1="8" x2="20" y2="14"></line>
                    <line x1="23" y1="11" x2="17" y2="11"></line>
                </svg>
            </div>
            <%- include('../partials/errors') %>

            <h1>Create Account</h1>
            <p class="login-subtitle">Register to get started</p>

            <div class="name-row">
                <div class="input-group">
                    <label for="firstname">First Name</label>
                    <div class="input-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <input type="text" id="firstname" name="firstname" placeholder="First name" value="<%= oldInput.firstname ?oldInput.firstname : ''%>">
                    </div>
                </div>
                <div class="input-group">
                    <label for="lastname">Last Name</label>
                    <div class="input-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <input type="text" id="lastname" name="lastname" placeholder="Last name" value="<%= oldInput.lastname ?oldInput.lastname : ''%>">
                    </div>
                </div>
            </div>

            <div class="input-group">
                <label for="email">Email</label>
                <div class="input-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= oldInput.email ?oldInput.email : ''%>" required>
                </div>
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <div class="input-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
            </div>

            <div class="input-group">
                <label for="confirmPassword">Confirm Password</label>
                <div class="input-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
                </div>
            </div>

            <div class="input-group">
                <label>Select Role</label>
                <div class="role-selector">
                    <input type="radio" id="role-user" name="role" value="guest" <%= oldInput.role === 'guest' ? 'checked' : '' %> hidden>
                    <label for="role-user" class="role-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        Guest
                    </label>
                    <input type="radio" id="role-host" name="role" value="host" <%= oldInput.role === 'host' ? 'checked' : '' %> hidden>
                    <label for="role-host" class="role-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        Host
                    </label>
                    <!-- <input type="radio" id="role-admin" name="role" value="admin" hidden>
                    <label for="role-admin" class="role-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                        Admin
                    </label> -->
                </div>
            </div>

            <div class="input-group" style="margin-top: 4px;">
                <label style="display: flex; align-items: center; gap: 8px; cursor: pointer; font-weight: 400; font-size: 0.85rem; color: #555;">
                    <input type="checkbox" name="terms" required style="width: 16px; height: 16px; accent-color: #ff9800; cursor: pointer;">
                    I agree to the <a href="#" style="color: #ff9800; text-decoration: none; font-weight: 600;">Terms & Conditions</a>
                </label>
            </div>

            <button type="submit">Sign Up</button>

            <p style="margin-top: 18px; font-size: 0.9rem; color: #888;">
                Already have an account? <a href="/login" style="color: #ff9800; text-decoration: none; font-weight: 600;">Login</a>
            </p>
        </form>
    </main>
</body>
</html>